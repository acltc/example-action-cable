<div ng-app="app">
  <div ng-controller="messagesCtrl" ng-init="setup()">
    <h1>Messages</h1>  
    <% if current_user %>
      <%= form_tag "/messages", method: :post do %>
        <div>
          <%= label_tag :body, "New message: " %>
          <%= text_field_tag :body %>
          <%= submit_tag "Submit" %>
        </div>
      <% end %>
    <% end %>
    <div class="message" ng-repeat="message in messages | orderBy:'created_at':true">
      {{ message.name }}: {{ message.body }}
    </div>
  </div>
</div>
